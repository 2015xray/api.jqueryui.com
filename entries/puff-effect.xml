<?xml version="1.0"?>
<entry name="puff" type="effect">
	<title>Puff Effect</title>
	<desc>
		Creates a puff effect by scaling the element up and hiding it at the same time.
	</desc>
	<longdesc>
		<p>This is the only effect without a separate file, it shares a file with the scale effect.</p>
	</longdesc>
	<options>
		<option name="mode" type="String" default="hide">
			<desc>The mode of the effect. Can be "show" or "hide"</desc>
		</option>
		<option name="percent" type="Number" default="150">
			<desc>The percentage to scale to.</desc>
		</option>
		<xi:include href="../includes/animation-option-duration.xml" xmlns:xi="http://www.w3.org/2003/XInclude"/>
		<xi:include href="../includes/animation-option-easing.xml" xmlns:xi="http://www.w3.org/2003/XInclude"/>
		<xi:include href="../includes/animation-option-complete.xml" xmlns:xi="http://www.w3.org/2003/XInclude"/>
	</options>
	<example>
		<desc>Puff toggle</desc>
		<css><![CDATA[
	#toggle { width: 100px; height: 70px; background: silver; }
]]></css>
		<code><![CDATA[
$( document ).click(function() {
	$( "#toggle" ).toggle( { effect: "puff" } );
});
]]></code>
		<html><![CDATA[
Click anywhere to toggle the silver box.
<div id="toggle"></div>
]]></html>
	</example>
	<category slug="effects"/>
</entry>
